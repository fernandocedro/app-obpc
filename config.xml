<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.obpcSchool" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Obpc School</name>
    <description>Obpc school - Escola</description>
    <author email="fernando@cedro.com.br" href="https://fernandocedro.com.br">
        Feito por - O Brasil para Cristo
    </author>

    <content src="index.html" />

    <!-- Permissões gerais -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- Configurações do Splash -->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="500" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenBackgroundColor" value="#07234B" />
    <preference name="AutoHideSplashScreen" value="false" /> <!-- fundo branco -->

    <!-- Ícone único -->
    <icon src="resources/icon.png" />

    <!-- Splash único -->
    <splash src="resources/splash.png" />

</widget>
